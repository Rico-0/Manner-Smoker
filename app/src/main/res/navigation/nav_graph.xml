<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kapstone.mannersmoker.ui.main.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kapstone.mannersmoker.ui.main.MainFragment"
        android:label="mainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_go_to_map"
            app:destination="@+id/mapFragment" />
        <action
            android:id="@+id/action_go_to_community"
            app:destination="@+id/communityFragment" />
        <action
            android:id="@+id/action_go_to_home"
            app:destination="@+id/homeFragment" />
        <action
            android:id="@+id/action_go_to_my"
            app:destination="@+id/myFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.kapstone.mannersmoker.ui.map.MapFragment"
        android:label="mapFragment"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.kapstone.mannersmoker.ui.community.CommunityFragment"
        android:label="communityFragment"
        tools:layout="@layout/fragment_community" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kapstone.mannersmoker.ui.home.HomeFragment"
        android:label="homeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/myFragment"
        android:name="com.kapstone.mannersmoker.ui.my.MyPageFragment"
        android:label="myFragment"
        tools:layout="@layout/activity_mypage" />
</navigation>