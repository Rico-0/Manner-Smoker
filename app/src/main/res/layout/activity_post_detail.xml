<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.kapstone.mannersmoker.R"/>
        <variable
            name="postDetailActivity"
            type="com.kapstone.mannersmoker.ui.community.PostDetailActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_community_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/item_community_root"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_community_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/toolbar_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:background="#6DADE3">

                <TextView
                    android:id="@+id/setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="게시글 자세히 보기"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_content_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_community_root"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/post_user_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/my"
                android:background="#DCDCDC"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/user_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/post_user_profile_image"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/post_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 : "
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="홍길동"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/post_user_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/user_info_layout">

                <TextView
                    android:id="@+id/post_user_title_text"
                    app:layout_constraintStart_toStartOf="@+id/user_info_layout"
                    app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="제목 : " />

                <TextView
                    android:id="@+id/post_user_title"
                    app:layout_constraintStart_toEndOf="@+id/post_user_title_text"
                    app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="아 금연 ㄹㅇ 개힘드네"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/user_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/post_user_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/user_title_layout">

                <TextView
                    android:id="@+id/post_user_date_text"
                    app:layout_constraintStart_toStartOf="@+id/user_info_layout"
                    app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="작성일자 : " />

                <TextView
                    android:id="@+id/post_user_date"
                    app:layout_constraintStart_toEndOf="@+id/post_user_title_text"
                    app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="2022년 6월 7일 오후 10시 30분"/>

            </LinearLayout>

            <TextView
                android:id="@+id/post_user_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/user_date_layout"
                app:layout_constraintStart_toStartOf="@id/user_info_layout"
                android:textSize="15sp"
                tools:text="금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까? 금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까?
금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까? 금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까?"/>

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/post_user_content"
                app:layout_constraintStart_toStartOf="@+id/post_user_content"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/post_comment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment"/>

                <TextView
                    android:id="@+id/post_comment_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/post_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/post_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정하기"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/post_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제하기"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/reply_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_content_root"
            android:text="@{postDetailActivity.isReplyShow ? R.string.reply_hide : R.string.reply_show}"
            android:visibility="@{postDetailActivity.isHaveReply ? View.VISIBLE : View.GONE}"
            tools:text="댓글 목록 숨기기"
            android:textSize="15sp"
            android:layout_margin="20dp"/>

      <!--  <TextView
            android:id="@+id/no_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_content_root"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="아직 등록된 댓글이 없습니다.\n 첫 댓글을 남겨보세요!"
            android:visibility="@{postDetailActivity.isHaveReply ? View.GONE : View.VISIBLE}"
            android:textSize="15sp"
            android:layout_marginTop="40dp"/> -->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reply_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reply_list_text"

            tools:listitem="@layout/item_reply">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/write_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:padding="10dp">

            <EditText
                android:id="@+id/comment"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="댓글을 입력해주세요!"/>

            <TextView
                android:id="@+id/write_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:text="등록"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/profile_edit_background"/>

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>