<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/set_first_smoke_time"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/set_first_smoke_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="흡연을 시작한 날짜를 설정하시겠습니까?" />

        <TextView
            android:id="@+id/set_first_smoke_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_first_smoke_description1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Tip : My - 설정 창에서 언제든지 변경하실 수 있습니다."
            android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/choice_yes_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/dialog_bt_accept"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="예"
                android:background="#FFE493"
                android:gravity="center"/>

            <TextView
                android:id="@+id/dialog_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아니오"
                android:background="#ECECEC"/>

        </LinearLayout>

    </RelativeLayout>

</layout>