<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.kapstone.mannersmoker.R"/>
        <variable
            name="postDetailActivity"
            type="com.kapstone.mannersmoker.ui.community.PostDetailActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_community_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/item_community_root"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_community_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/toolbar_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:background="#6DADE3">

                <TextView
                    android:id="@+id/setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="게시글 수정"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_content_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_community_root"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/post_user_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/my"
                android:background="#DCDCDC"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/user_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/post_user_profile_image"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/post_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 : "
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="홍길동"
                    android:textSize="17sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/post_user_title_text"
                app:layout_constraintStart_toStartOf="@+id/user_info_layout"
                app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="제목 : " />

            <TextView
                android:id="@+id/post_user_context_text"
                app:layout_constraintStart_toStartOf="@+id/post_user_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/post_user_profile_image"
                app:layout_constraintEnd_toStartOf="@id/post_user_content"
                android:layout_marginTop="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="내용" />

            <EditText
                android:id="@+id/post_user_title"
                app:layout_constraintStart_toEndOf="@+id/post_user_title_text"
                app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
                android:hint="내용을 입력해 주세요!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="아 금연 ㄹㅇ 개힘드네"/>

            <EditText
                android:id="@+id/post_user_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/post_user_title"
                app:layout_constraintStart_toStartOf="@id/user_info_layout"
                android:hint="내용을 입력해 주세요!"
                android:textSize="15sp"
                tools:text="금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까? 금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까?
금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까? 금연 5일차인데 죽을 것 같다.. 어차피 언젠간 다시 필 것 같은데 그냥 관둘까?"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_content_root"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/modify_post_button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#FFE493"
                android:gravity="center"
                android:text="수정" />

            <TextView
                android:id="@+id/modify_post_cancel_button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="#ECECEC"
                android:gravity="center"
                android:text="취소" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>