<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mapFragment"
            type="com.kapstone.mannersmoker.ui.map.MapFragment" />
    </data>

    <RelativeLayout
        android:id="@+id/mapView_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/search_place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <EditText
                android:id="@+id/location_search_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/location_search_background"
                android:hint="검색할 장소를 입력해주세요! 예) 용산구"
                android:paddingHorizontal="10dp" />

            <ImageView
                android:id="@+id/start_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="4dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/search" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clKakaoMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_place_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:padding="15dp">

            <ImageView
                android:id="@+id/get_current_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_background"
                android:padding="10dp"
                android:src="@drawable/current_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/add_smoke_count" />


            <ImageView
                android:id="@+id/add_smoke_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_background"
                android:padding="10dp"
                android:src="@drawable/smoke_icon_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/get_current_location"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/map_bigger_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_background"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/map_smaller_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/user_background"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_bigger_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

</layout>