<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kapstone.mannersmoker.MainActivity">

    <ImageView
        android:id="@+id/smoke_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smoking_place"
        app:layout_constraintBottom_toTopOf="@id/mannersmoker_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/mannersmoker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manner Smoker"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smoke_icon"/>

    <ImageButton
        android:id="@+id/kakao_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mannersmoker_text"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        />

    <ImageButton
        android:id="@+id/naver_login_button"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/naver_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_button"/>

    <TextView
        android:id="@+id/use_app_for_guest"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/user_background"
        android:text="비회원으로 이용하기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/naver_login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>