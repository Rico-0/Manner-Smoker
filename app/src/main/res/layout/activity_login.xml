<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kapstone.mannersmoker.MainActivity">

    <ImageView
        android:id="@+id/smoke_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smoking_place"
        app:layout_constraintBottom_toTopOf="@id/mannersmoker_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/mannersmoker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manner Smoker"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smoke_icon"/>

    <ImageButton
        android:id="@+id/kakao_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_narrow"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mannersmoker_text"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>