<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androd="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/dialog_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 흡연 구역으로 길을 안내할까요?"
            android:layout_gravity="center"
            android:layout_marginBottom="28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_bt_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFE493"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:paddingVertical="16dp"
                android:text="예"
                android:textColor="#6d5107" />

            <TextView
                android:id="@+id/dialog_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="16dp"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:gravity="center"
                android:textColor="#888888"
                android:text="아니오" />


        </LinearLayout>


    </LinearLayout>
</layout>