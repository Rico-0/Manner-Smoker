<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smokePlaceDetail_root">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar_smokePlaceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:background="#6DADE3">

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="흡연 구역 정보"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/smoke_place_image"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="#DDDDDD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_smokePlaceDetail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:src="@drawable/smoke_icon"
            android:padding="20dp"/>

        <LinearLayout
            android:id="@+id/smoke_place_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/smoke_place_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/smoke_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:text="경기대학교 덕문관 앞"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smoke_place_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/smoke_place_name_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/smoke_place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:text="경기도 수원시 권선구 13-5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/distance_from_current_place_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/smoke_place_address_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 위치로부터 거리"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/distance_from_current_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:text="2km"/>
        </LinearLayout>

        <TextView
            android:id="@+id/distance_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance_from_current_place_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※ 실제 길찾기 시 표시되는 거리와 오차가 있을 수 있습니다."
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/distance_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/go_to_find_destination"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#FFE493"
                android:gravity="center"
                android:text="길찾기" />

            <TextView
                android:id="@+id/go_to_find_destination_cancel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="#ECECEC"
                android:gravity="center"
                android:text="취소" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>