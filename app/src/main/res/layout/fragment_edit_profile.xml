<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/profile_root_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#6DADE3"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="프로필 변경하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/user_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginTop="20dp"
            android:padding="30dp">

            <ImageView
                android:id="@+id/proflie_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/user_background"
                android:src="@drawable/my" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/user_background"
                android:src="@drawable/camera_icon" />

        </FrameLayout>

        <TextView
            android:id="@+id/profile_name_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/user_profile_icon"
            android:text="프로필 이름"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/profile_name_change_text"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="홍정현" />

        <TextView
            android:id="@+id/profile_name_change_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name_change_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/user_profile_icon"
            android:text="변경할 이름"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/profile_name_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/profile_name_change_text"
            android:hint="변경할 이름 입력"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_profile"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#FFE493"
                android:gravity="center"
                android:text="변경" />

            <TextView
                android:id="@+id/change_profile_cancel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="#ECECEC"
                android:gravity="center"
                android:text="취소" />

        </LinearLayout>



    </RelativeLayout>



</layout>