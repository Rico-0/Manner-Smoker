<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/write_post_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/profile_root_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#6DADE3"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="게시글 작성하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/user_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/proflie_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_background"
                android:src="@drawable/my" />

        </LinearLayout>

        <EditText
            android:id="@+id/write_post_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/user_profile_icon"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="제목을 입력해 주세요!"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/write_post_content"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/write_post_title"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/user_profile_icon"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="내용을 입력해 주세요!"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/write_post_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/write_post_button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#FFE493"
                android:gravity="center"
                android:text="등록" />

            <TextView
                android:id="@+id/write_post_cancel_button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="#ECECEC"
                android:gravity="center"
                android:text="취소" />

        </LinearLayout>

    </RelativeLayout>

</layout>