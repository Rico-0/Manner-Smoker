<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/profile_root_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#6DADE3"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="흡연 구역 제보하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_root_text"
            android:layout_marginTop="30dp">


            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_root_text"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:layout_toRightOf="@id/user_profile_icon"
                android:text="사진"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/photo_imageView"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_below="@id/profile_root_text"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/photo_text"
                android:src="@drawable/camera_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="카메라 아이콘을 클릭하면 사진을 촬영할 수 있습니다." />

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_description"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp">


            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_root_text"
                android:layout_toRightOf="@id/user_profile_icon"
                android:text="주소"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_root_text"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/user_profile_icon"
                android:text="경기도 수원시 권선구 13-5"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/add_smoke_place_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="제보된 흡연 구역은 신뢰성이 확보되면 지도에 표시됩니다." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/add_smoke_place_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_new_smoke_place_button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#FFE493"
                android:gravity="center"
                android:text="등록" />

            <TextView
                android:id="@+id/add_new_smoke_place_cancel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="#ECECEC"
                android:gravity="center"
                android:text="취소" />

        </LinearLayout>

    </RelativeLayout>

</layout>